---
const{eventName,startTime,endTime} = Astro.props;
---

<article>
  <div>
    <h2>{eventName}</h2>
    <p><span>{startTime}</span><span> - </span><span>{endTime}</span></p>
    <button type="button">â˜…</button>
  </div>
<slot></slot>
</article>

<style>
  article {
    display: grid;
    grid-template-columns: 3fr 2fr;
    width: 100%;
  }
  div {
    background-color: var(--custom_red);
    color: var(--muted_white);
    font-family: roboto;
    font-weight: 300;
    display: grid;
    grid-template-columns: 4fr 1fr;
    place-items: center;
    padding: 1rem;
  }
  h2 {
    grid-column: span 2;
    font-size: 1.5;
    font-weight: 500;
  }
  button {
    background-color: transparent;
    border-color: transparent;
    color: inherit;
    cursor: pointer;
    font-size: 3em;
    grid-row: 2/3;
    aspect-ratio: 1;
    line-height: 0;
  }
  span {
    grid-row: 2/3;
    font-size: 1.5em;
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
