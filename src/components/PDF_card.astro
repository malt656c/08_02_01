---
const Text = Astro.props.text;
---

<section>
  <img src="../../public/pdf.png" alt="pdf_logo" />
  <p>{Text}</p>
</section>

<style>
  section {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    background-color: white;
    border-style: solid;
    border-width: 2px;
    width: 20em;
  }
  section > img {
    width: 90px;
    margin: auto;
  }
  section > p {
    margin: auto;
    padding-right: 10px;
    font-family: "roboto";
    font-display: auto;
    font-style: normal;
    font-weight: 300;
    font-stretch: normal;
  }
  @media (max-width: 750px) {
    section {
      display: flex;
      flex-wrap: wrap;
    }

    section > p {
      text-align: center;
      padding: 0.5em;
      font-size: 15px;
    }
  }
</style>
