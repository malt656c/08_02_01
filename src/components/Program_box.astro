---
import ProgramCard from "./Program_Card.astro";
const { location, title } = Astro.props;
---

<script></script>
<article>
  <h2>{title}</h2>
  <div>
    <!--   <Debug {data} /> -->
    {
      location.map((event) => (
        <ProgramCard eventName={event.event_name} startTime={event.start_time.substring(0, 5)} endTime={event.end_time?.substring(0, 5)} eventId={event.id}>
          <img src={"../../public/database_billeder/" + event.event_name.split(" ").join("_") + ".webp"} alt="" />
        </ProgramCard>
      ))
    }
  </div>
</article>
<style>
  article {
    display: grid;
    justify-items: center;
    align-content: flex-start;
    gap: 1rem;
    max-height: min-content;
  }
  h2 {
    font-family: roboto;
    font-weight: 300;
    font-size: 1.8rem;
  }
  div {
    max-width: 500px;
    max-height: 750px;
    overflow-y: scroll;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  img {
    max-width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 16/9;
  }
</style>
